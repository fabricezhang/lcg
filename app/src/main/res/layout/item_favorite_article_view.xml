<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/layout">

    <data>
        <variable
                name="viewModel"
                type="top.easelink.lcg.ui.main.articles.viewmodel.FavoriteArticleItemViewModel"/>
    </data>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:background="@color/white"
            android:onClick="@{() -> viewModel.onItemClick()}"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/dp_7"
            app:cardElevation="@dimen/dp_4">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="@dimen/dp_20"
                android:paddingStart="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_15">

            <TextView
                    android:id="@+id/titleTextView"
                    style="@style/TextStyle.Heading"
                    android:layout_width="356dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:maxLines="2"
                    android:text="@{viewModel.title}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    tools:text="Title"/>

            <TextView
                    android:id="@+id/authorTextView"
                    style="@style/TextStyle.Title.Sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.author}"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:layout_constraintTop_toBottomOf="@id/titleTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Author"/>

            <TextView
                    android:id="@+id/contentTextView"
                    style="@style/TextStyle.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@{viewModel.content}"
                    android:textStyle="normal"
                    android:maxLines="3"
                    android:ellipsize="start"
                    app:layout_constraintTop_toBottomOf="@id/authorTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="This repository contains a detailed sample app that implements MVP architecture using Dagger2, GreenDao, RxJava2, FastAndroidNetworking and PlaceholderView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>